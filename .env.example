# Environment Variables for Stock Management System
# Copy this file to .env and update with your actual values

# Flask Secret Key (change this in production)
SECRET_KEY=your-very-secure-secret-key-here

# Google Sheets Configuration - Get these IDs from your Google Sheets URLs
# URL format: https://docs.google.com/spreadsheets/d/SHEET_ID/edit
PRODUCT_SHEET_ID=your_product_master_sheet_id_here
STOCK_SHEET_ID=your_stock_counting_data_sheet_id_here

# Application Settings
FLASK_ENV=production
DEBUG=False
HOST=127.0.0.1
PORT=8080

# Authentication
# Default login: admin/admin123, staff/staff123

# Google Drive API
GOOGLE_CREDENTIALS_FILE=credentials.json
